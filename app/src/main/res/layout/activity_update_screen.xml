<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/linbg1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="191dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/photos_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:textColor="@color/white"
        android:layout_marginTop="-30dp"
        android:text="Simple Gallery"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:textColor="@color/white"
        android:layout_marginTop="0dp"
        android:text="Beta 1.0"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:text="Note: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:padding="40dp"
        android:textColor="@color/white"
        android:layout_marginTop="-30dp"
        android:text="This is a Beta build, please wait till the official build is released by the developer. Thank you for your patience."
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="0dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/white"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="Back"
        android:textColor="@color/black" />



</LinearLayout>