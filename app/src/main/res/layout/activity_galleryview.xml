<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

<LinearLayout
    android:id="@+id/main"
    android:background="@drawable/linbg1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GalleryView">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:text="Gallery View" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-50dp"
        android:backgroundTint="@android:color/white"
        android:scaleX="1"
        android:scaleY="1"
        android:text="Back"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="3dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnj1"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:padding="3dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/j1" />

        <ImageButton
            android:id="@+id/btnj2"
            android:layout_width="1dp"
            android:padding="3dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/j2" />

        <ImageButton
            android:id="@+id/btnj3"
            android:layout_width="1dp"
            android:padding="3dp"
            android:background="@android:color/transparent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            app:srcCompat="@drawable/j3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnj4"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:padding="3dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            app:srcCompat="@drawable/j4" />

        <ImageButton
            android:id="@+id/btnj5"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:padding="3dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            app:srcCompat="@drawable/j5" />

        <ImageButton
            android:id="@+id/btnj6"
            android:layout_width="1dp"
            android:padding="3dp"
            android:background="@android:color/transparent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            app:srcCompat="@drawable/j6" />

    </LinearLayout>
</LinearLayout>
</ScrollView>